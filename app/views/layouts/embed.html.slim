doctype html
html
  head
    meta (charset="utf-8")
    meta (http-equiv="X-UA-Compatible" content="IE=edge")

    title #{@name} | Global Forest Watch - Climate
    meta (name="description" content="#{@desc}")
    meta (name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1")
    meta (name="keywords" content="#{@keywords}>")
    meta (name="author" content="SimbiÃ³tica")

    meta (name="DC.title" content="#{@name} | Global Forest Watch")
    meta (property="og:title" content="#{@name} | Global Forest Watch")
    meta (property="og:description" content="#{@desc}")
    meta (property="og:type" content="Visualization")
    meta (property="og:url" content="http://www.globalforestwatch.org/")

    link (href='https://fonts.googleapis.com/css?family=Fira+Sans:400,500,300' rel='stylesheet' type='text/css')

    meta (name="google-translate-customization" content="af2414ea962843fc-f48b15cdb6a3ab9b-gd8c738d3a7ff42de-1a")
    meta (name="google-site-verification" content="xx82D6cZ40Hvf-TT9jkhfsVi11yIeShPcK0zcc7m7ak")

    = render 'shared/icons'

    = stylesheet_link_tag "countries", :media => "all"
    = stylesheet_link_tag "embed", :media => "all"
    = csrf_meta_tags

    javascript:
      var gfw = window.gfw = {
        config: {
          GFW_URL: "#{ENV['GFW_URL']}",
          GFW_API_HOST: "#{ENV['GFW_API_HOST']}",
          GFW_API_HOST_V2: "#{ENV['GFW_API_HOST_V2']}",
          GFW_API_HOST_PRO: "#{ENV['GFW_API_HOST_PRO']}",
          GFW_DATA_S3: "#{ENV['GFW_DATA_S3']}",
          GFW_MOBILE: 850
        }
      };

  body class="is-#{params[:controller]}-page is-#{params[:action]}-action"

    = render 'shared/svg_icons'
    = render 'shared/svg_icons_countries'

    = yield

    = render 'shared/modal'
    = render 'shared/sources_widgets'

    = requirejs_include_tag "embed"
    = render "shared/js_footer"
