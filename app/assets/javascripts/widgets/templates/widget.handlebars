{{!-- Cambiar id num√©rico por widget-id --}}
<section class="m-widget">
  <header class="m-widget-header">
    <h2 class="name">{{this.name}}</h2>
    <ul class="options">
      <li>
        <button class="lock-mode -mobile is-desktop-hidden" data-id="{{this.id}}">
          <svg class="icon-unlock"><use xlink:href="#icon-unlock"></use></svg>
          <svg class="icon-lock"><use xlink:href="#icon-lock"></use></svg>
          <div class="locker-tooltip is-hidden">
            <span class="tooltip-legend">unlock</span>
          </div>
        </button>
      </li>
      <li>
        <a class="btn-action close" href="#">
          <svg>
            <use xlink:href="#shape-close"></use>
          </svg>
          <span class="tooltip1 dark">Remove</span>
        </a>
      </li>
      <li>
        <a class="btn-action js-open-share" data-widget="{{this.id}}" data-slugshare="{{this.slugshare}}" href="#">
          <svg>
            <use xlink:href="#shape-share"></use>
          </svg>
          <span class="tooltip1 dark">Share</span>
        </a>
      </li>
      <li>
        <a class="btn-action download" href="#">
          <svg>
            <use xlink:href="#shape-download-arrow"></use>
          </svg>
          <span class="tooltip1 dark last">Download</span>
        </a>
      </li>
      <li>
        <a class="btn-action source" href="#" data-source="source-{{this.slug}}">
          <svg>
            <use xlink:href="#shape-info"></use>
          </svg>
          <span class="tooltip1 dark">Read more</span>
        </a>
      </li>
    </ul>
  </header>
  <div class="m-widget-content">

    {{#if this.tabs}}
      {{#if this.isMobile}}
        <div class="wrapper"> 
          <select class="is-desktop-hidden tab-selector tab-ul" name="tabs" id="country-tabs-mobile">
            {{#each this.tabs}}
              <option class="tab-li" value="{{this.position}}" data-position="{{this.position}}">
                {{this.name}}
              </option>
            {{/each}}
          </select>
        </div>
      {{else}}
        <ul class="tab-ul is-mobile-hidden">
        {{#each this.tabs}}
          <li class="tab-li" data-position="{{this.position}}">
            <span class="name">{{this.name}}</span>
            {{#if this.subname}}<span class="subname">{{this.subname}}</span>{{/if}}
            {{#if this.ipcc}}<span class="ipcc">{{this.ipcc}}</span>{{/if}}
          </li>
        {{/each}}
        </ul>
      {{/if}}
      <div class="m-tab tab-content"></div>
    {{/if}}
  </div>
</section>
