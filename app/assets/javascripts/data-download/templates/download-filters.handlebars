<div class="l-content">
  <section class="content">
    <div class="row align-justify">
      <div class="column small-6">
        <h3>CREATE A CUSTOM DATASET</h3>
      </div>
      <div class="column small-6 right-center">
        <button id="clear-btn" class="icon -hide">
          <svg>
            <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-remove"></use>
          </svg>
        </button>
      </div>
    </div>
    <div class="row">
      {{#each filters}}
        <div class="column small-12 medium-4 {{#if this.hide}}-hide{{/if}}">
          <div id="{{this.id}}-filter-card"></div>
        </div>
      {{/each}}
    </div>
  </section>
</div>

<div class="l-footer">
  <footer>
    <div class="row">
      <div class="column small-6 medium-2">
        <div id="outputTypeSwitch"></div>
      </div>
      <div class="column small-6 medium-2">
        <div id="filerSwitch"></div>
      </div>
      <div class="column small-12 medium-6 right-center">
        <span class="validation-msg">Please select, at least, a country, an indicator and a year</span>
      </div>
      <div class="column small-12 medium-2">
        <div class="btn-download">
          <button id="download-btn" disabled class="btn blue medium">Download</button>
        </div>
      </div>
    </div>
  </footer>
</div>
