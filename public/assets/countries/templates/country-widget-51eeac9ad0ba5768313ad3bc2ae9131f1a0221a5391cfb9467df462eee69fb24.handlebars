{{!-- Cambiar id num√©rico por widget-id --}}
<section class="country-widget" id="{{id}}">
  <div class="country-widget__header">
    <h2 class="country-widget__name">{{name}}</h2>
    <div class="options">
      <a class="close" href="#">Delete
        <svg>
          <use xlink:href="#shape-close"></use>
        </svg>
      </a>
      <a class="info" href="#">
        <svg>
          <use xlink:href="#shape-info"></use>
        </svg>
      </a>
      <a class="share" href="#">
        <svg>
          <use xlink:href="#shape-share"></use>
        </svg>
      </a>
    </div>
  </div>
  <div class="country-widget__content" data-type="{{type}}">

    {{#if tabs}}
      <div class="indicators-grid">
      {{#each tabs}}
        <div class="indicators-grid__item" data-position="{{position}}" data-type="{{type}}">{{name}}</div>
      {{/each}}
      </div>
      <div class="indicators__content">
        <div class="graph-container"></div>
      </div>
    {{/if}}
  </div>
</section>
